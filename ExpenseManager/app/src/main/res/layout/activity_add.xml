<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".AddActivity">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/lblAdd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/lblAmount"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lblAdd"
        android:layout_alignParentLeft="true"
        android:text="Amount"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/txtAmount"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/lblAmount"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/lblAmount"
        android:importantForAutofill="no"
        android:inputType="numberSigned"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/lblCategory"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lblAmount"
        android:layout_alignLeft="@id/lblAmount"
        android:layout_marginTop="5dp"
        android:text="Category"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtAmount"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/lblCategory" />

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lblCategory"
        android:layout_alignLeft="@id/lblAmount"
        android:layout_marginTop="5dp"
        android:text="Date"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtDate1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/lblCategory"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/lblDate"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <DatePicker
        android:id="@+id/datePickDate"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:layout_below="@id/lblDate"
        android:layout_alignLeft="@id/lblAmount"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:calendarTextColor="@android:color/black"
        android:datePickerMode="calendar"
        android:scaleX="1.0"
        android:scaleY="1.0" />


    <Button
        android:id="@+id/btnSave1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datePickDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_light"
        android:text="Save"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

</RelativeLayout>